#include<stdio.h>
int main()
{
            int num,a,sum=0,i;
            printf("Enter the number to find perfect number or not :");
            scanf("%d",&num);
            
            for(i=1;i<num;i++)
            {
                        a=num%i;
                        if(a == 0)
                        {
                                    sum=sum+i;
                        }
            }
            if(sum == num)
            {
                        printf("%d is a perfect number",num);
            }
            else
            {
                        printf("%d is not a perfect number",num);
            }
}
